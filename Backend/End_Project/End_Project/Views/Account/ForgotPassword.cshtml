@model ForgotPasswordVM
@{
    ViewData["Title"] = "ForgotPassword";
}


@section Link{

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" />

    <link rel="stylesheet" href="~/assets/css/login/login.css">
}


<main>
    <section id="login-area" style="background-image: url(../assets/images/login/login-image.jpg)">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-sm-12">
                    <div class="main">
                        <div class="box">
                            <div class="form">
                                <h2 class="my-5" style="font-size:revert" >Enter Your Email !</h2>
                                <form asp-controller="Account" asp-action="ForgotPassword" method="post" enctype="application/x-www-form-urlencoded">
                                    <div class="inputBox">
                                        <input type="email" required="required" autocomplete="off" asp-for="Email">
                                        <p>Email *</p>
                                        <i></i>
                                    </div>
                                    <span class="text-danger" style="display:block" asp-validation-for="Email"></span>
                                    <input class="my-5" type="submit" value="Send">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    <script src="https://kit.fontawesome.com/706af225b1.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <partial name="_ValidationPartial" />

    <script src="~/assets/js/login.js"></script>
}

