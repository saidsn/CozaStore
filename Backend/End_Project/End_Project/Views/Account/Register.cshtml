@model RegisterVM

@{
    ViewData["Title"] = "Register";
}

@section Link{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" />

    <link rel="stylesheet" href="~/assets/css/register/register.css">
}

<main>
    <section id="register-area" style="background-image: url(../assets/images/register/Register-image.jpg)">
        <div class="container">
            <div class="row">
                <div class="col-lg-12  col-sm-12">
                    <div class="main">
                        <div class="box">
                            <div class="form">
                                <div class="text-danger mb-2 mt-3" asp-validation-summary="All"></div>
                                <h2>Register</h2>
                                <form asp-controller="Account" asp-action="Register" method="post" enctype="application/x-www-form-urlencoded">
                                    <div class="inputBox">
                                        <input type="text" required="required" autocomplete="off" asp-for="Fullname">
                                        <p>Fullname *</p>
                                        <i></i>
                                    </div>
                                    <span class="text-danger" asp-validation-for="Fullname"></span>
                                    <div class="inputBox">
                                        <input type="text" required="required" autocomplete="off" asp-for="Username">
                                        <p>Username *</p>
                                        <i></i>
                                    </div>
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                    <div class="inputBox">
                                        <input type="email" required="required" autocomplete="off" asp-for="Email">
                                        <p>Email *</p>
                                        <i></i>
                                    </div>
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                    <div class="inputBox">
                                        <input type="password" required="required" id="passwordId" autocomplete="off" asp-for="Password">
                                        <p>Password *</p>
                                        <i></i>
                                    </div>
                                      <span class="text-danger" asp-validation-for="Password"></span>
                                    <div class="inputBox">
                                        <input type="password" required="required" id="repeatPasswordId" autocomplete="off" asp-for="ConfirmPassword">
                                        <p>Confirm Password *</p>
                                        <i></i>
                                    </div>
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                    <div class="links">
                                        <div class="show">
                                            <input type="checkbox" id="checkId">
                                            <a href="">Show Password</a>
                                        </div>
                                    </div>
                                    <input type="submit" value="Sign up">
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</main>


@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    <script src="https://kit.fontawesome.com/706af225b1.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <partial name="_ValidationPartial" />
        
    <script src="~/assets/js/register.js"></script>
}

                                            