@model BlogCreateVM
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="row my-5">

        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3 style="color:#505668; text-align:center">- Blog Create -</h3>

                    <form asp-controller="Blog" asp-action="Create" class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <div>
                                <label for="exampleInputUsername1">Image</label>
                                <input class="form-control" asp-for="Photo">
                                <span class="text-danger" asp-validation-for="Photo"></span>
                            </div>
                            <div>
                                <label for="exampleInputUsername1">Title</label>
                                <textarea class="form-control rounded-0" asp-for="Title" ></textarea>
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>
                            <div>
                                <label for="exampleInputUsername1">Description</label>
                                <input class="form-control rounded-0" asp-for="Description">
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                            <div>
                                <label asp-for="BlogCategoryId">Categories</label>
                                <select class="form-control" asp-for="BlogCategoryId" asp-items="@ViewBag.categories"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            @if (Model.Tag != null)
                            {
                                @for (int i = 0; i < Model.Tag.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            <label>@Model.Tag[i].Name</label>
                                            <input type="hidden" asp-for="@Model.Tag[i].Name" />
                                            <input type="hidden" asp-for="@Model.Tag[i]" />
                                            <input type="checkbox" asp-for="@Model.Tag[i].IsSelected" />
                                            <input type="hidden" asp-for="@Model.Tag[i].Id" />
                                        </td>
                                    </tr>
                                }
                            }
                        </div>

                        <button type="submit" class="btn btn-primary me-2">Create</button>
                        <a asp-controller="Blog" asp-action="Index" class="btn btn-primary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>

 
}





