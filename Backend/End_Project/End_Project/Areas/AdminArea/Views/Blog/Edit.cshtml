@model BlogEditVM
@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="row my-5">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3 style="color:#505668; text-align:center">- Blog Edit -</h3>
                    <img style="width:300px;margin-bottom:20px" src="~/assets/images/blog/@Model.Image" alt="image" />
                    <form asp-controller="Blog" asp-action="Edit" class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">

                            <div>
                                <label for="exampleInputUsername1"><b>Image</b></label>
                                <input class="form-control" asp-for="Photo">
                                <span class="text-danger" asp-validation-for="Photo"></span>
                            </div>

                            <div>
                                <label for="exampleInputUsername1"><b>Title</b></label>
                                <input class="form-control rounded-0" asp-for="Title" rows="10">
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>

                            <div>
                                <label for="exampleInputUsername1">Description</label>
                                <input class="form-control rounded-0" asp-for="Description" rows="10">
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                            <div>
                                <label asp-for="BlogCategoryId">Categories</label>
                                <select class="form-control" asp-for="BlogCategoryId" asp-items="@ViewBag.blogCategories"></select>
                            </div>

                        </div>

                        <button type="submit" class="btn btn-primary me-2">Edit</button>
                        <a asp-controller="Blog" asp-action="Index" class="btn btn-primary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>
}

