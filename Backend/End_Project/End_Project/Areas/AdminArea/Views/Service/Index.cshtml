@model IEnumerable<Service>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

@section Link{

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" />
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3 style="text-align:center;color:#505668"> - Service Index -</h3>
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <a type="button" asp-area="AdminArea" asp-controller="Service" asp-action="Create" class="btn btn-success" style="width:65px; height:45px"><i class="fa-solid fa-square-plus" style="font-size:25px;margin:-5px"></i></a>

                    }
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered table-hover border-dark">
                            <thead style="background:#505668;color:wheat">

                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th style="text-align:center">
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var service in Model)
                                {
                                    <tr>
                                        <td>
                                            @count
                                        </td>
                                        <td>
                                            <img style="width:100px; height:100px;border-radius:0 !important " src="~/assets/images/Service/@service.Image" alt="slider" />
                                        </td>
                                        <td>
                                            @Html.Raw(service.Title)
                                        </td>
                                        <td style="white-space:normal">
                                            @Html.Raw(service.Description)
                                        </td>
                                        <td style="text-align:center">
                                            <a asp-action="Detail" asp-route-id="@service.Id" type="button" class="btn btn-info"><i class="fa-solid fa-circle-info"></i></a>
                                            @if (User.IsInRole("SuperAdmin"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@service.Id" type="button" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>

                                            }
                                            @if (!User.IsInRole("Member"))
                                            {
                                                <form id="parent-image" style="display: inline-block;" asp-action="Delete" asp-route-id="@service.Id" method="post">
                                                    <button data-id="@service.Id" type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
                                                </form>
                                            }

                                        </td>
                                    </tr>

                                    count++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <script src="https://kit.fontawesome.com/706af225b1.js"></script>
}



