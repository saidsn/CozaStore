@model ContactInfo
@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="row my-5">

        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3 style="color:#505668; text-align:center">- ContactInfo Edit -</h3>

                    <form asp-controller="ContactInfo" asp-action="Edit" class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <div>
                                <label for="exampleInputUsername1">Phone</label>
                                <input class="form-control rounded-0" asp-for="Phone" rows="10"></input>
                                <span class="text-danger" asp-validation-for="Phone"></span>
                            </div>
                            <div>
                                <label for="exampleInputUsername1">Address</label>
                                <input class="form-control rounded-0" asp-for="Address" rows="10"></input>
                                <span class="text-danger" asp-validation-for="Address"></span>
                            </div>
                                <div>
                                <label for="exampleInputUsername1">Description</label>
                                <textarea class="form-control rounded-0" asp-for="Description" id="Desc-area" rows="10"></textarea>
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">Edit</button>
                        <a asp-controller="ContactInfo" asp-action="Index" class="btn btn-primary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>

    <script>
        CKEDITOR.replace("Desc-area")
    </script>
}

