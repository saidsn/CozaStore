@model ContactInfo
@{
    ViewData["Title"] = "Index";

}

@section Link{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" />
}


<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3 style="text-align:center;color:#505668"> - ContactInfo Index -</h3>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered table-hover border-dark">
                            <thead style="background:#505668;color:wheat">

                                <tr>
                                    <th>
                                        Phone
                                    </th>
                                    <th>
                                        Address
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th style="text-align:center">
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.Raw(Model.Phone)
                                    </td>
                                    <td>
                                        @Html.Raw(Model.Address)
                                    <td style="white-space:normal">
                                            @Html.Raw(Model.Description)
                                    </td>
                                    <td style="text-align:center">
                                        <a asp-action="Detail" asp-route-id="@Model.Id" type="button" class="btn btn-info"><i class="fa-solid fa-circle-info"></i></a>
                                            @if (User.IsInRole("SuperAdmin"))
                                            {
                                            <a asp-action="Edit" asp-route-id="@Model.Id" type="button" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>

                                            }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://kit.fontawesome.com/706af225b1.js"></script>
}
