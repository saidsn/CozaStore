@model Banner
@{
    ViewData["Title"] = "Detail";
}

@section Link{

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" />
}


<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3 style="text-align:center;color:#505668"> - Banner Detail -</h3>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered table-hover border-dark">
                            <thead style="background:#505668;color:wheat">

                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                </tr>

                            </thead>
                            <tbody>

                                <tr>
                                    <td>
                                        1
                                    </td>
                                    <td>
                                        <img style="width:100px; height:100px;border-radius:0 !important " src="~/assets/images/Banner/@Model.Image" alt="slider" />
                                    </td>
                                    <td>
                                        @Html.Raw(Model.Title)
                                    </td>
                                    <td>
                                        @Html.Raw(Model.Description)
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a asp-controller="Banner" asp-action="Index" class="btn btn-primary">Back</a>
</div>

@section Scripts{

    <script src="https://kit.fontawesome.com/706af225b1.js"></script>
}

