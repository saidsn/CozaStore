@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

@section Link{

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" />
}


<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3 style="text-align:center;color:#505668"> - Contact Index -</h3>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered table-hover border-dark">
                            <thead style="background:#505668;color:wheat">

                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Email
                                    <th>
                                        Subject
                                    <th>
                                        Message
                                    </th>
                                    <th style="text-align:center">
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var contact in Model)
                                {
                                    <tr>
                                        <td>
                                            @count
                                        </td>
                                        <td>
                                            @Html.Raw(contact.Name)
                                        </td>
                                        <td>
                                            @Html.Raw(contact.Email)
                                        <td>
                                            @Html.Raw(contact.Subject)
                                        <td>
                                            @Html.Raw(contact.Message)
                                        </td>
                                        <td style="text-align:center">
                                            <a asp-action="Detail" asp-route-id="@contact.Id" type="button" class="btn btn-info"><i class="fa-solid fa-circle-info"></i></a>
                                        </td>
                                    </tr>

                                    count++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="https://kit.fontawesome.com/706af225b1.js"></script>
}

