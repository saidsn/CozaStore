@model ProductEditVM
@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="row my-5">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3 style="color:#505668; text-align:center">- Product Edit -</h3>
                    <form asp-controller="Product" asp-action="Edit" class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <div class="form-group">
                                <label asp-for="Photos" class="drop-container">Images</label>
                                <input class="form-control mybutton" asp-for="Photos">
                                <span class="text-danger" asp-validation-for="Photos"></span>
                            </div>
                            <div>
                                <label for="exampleInputUsername1">Name</label>
                                <input class="form-control rounded-0" asp-for="Name" rows="10">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId">Categories</label>
                                <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.categories"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="BrandId">Brand</label>
                                <select class="form-control" asp-for="BrandId" asp-items="@ViewBag.brands"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price">Price</label>
                                <input type="number" min="0" class="form-control" asp-for="Price">
                                <span asp-validation-for="Price" class="text-danger my-1"></span>
                            </div>
                            <div>
                                <label for="exampleInputUsername1">Description</label>
                                <textarea class="form-control rounded-0" asp-for="Description" id="Description-area" rows="10"></textarea>
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>

                        </div>

                        <button type="submit" class="btn btn-primary me-2">Edit</button>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>

    <script>
        CKEDITOR.replace("Description-area")
    </script>
}

